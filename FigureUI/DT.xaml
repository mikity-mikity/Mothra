<UserControl x:Class="mikity.visualize.DT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Width="Auto" Height="Auto" >
        
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" Background="Gainsboro">Step Size</Label>
        <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Background="AntiqueWhite">
        <RadioButton Checked="RadioButton_Checked">0.0125</RadioButton>
            <RadioButton Checked="RadioButton_Checked">0.025</RadioButton>
            <RadioButton Checked="RadioButton_Checked">0.05</RadioButton>
            <RadioButton Checked="RadioButton_Checked">0.1</RadioButton>
            <RadioButton Checked="RadioButton_Checked" x:Name="Default">0.2</RadioButton>
            <RadioButton Checked="RadioButton_Checked">0.4</RadioButton>
            <RadioButton Checked="RadioButton_Checked">0.8</RadioButton>
        </DockPanel>
    </StackPanel>
</UserControl>
